            <li><a href="{{ path('admin_presta_cmscore_website_list') }}">{{ 'dashboard.block.website.title'|trans({}, 'PrestaCMSCoreBundle') }}</a></li>
            <li><a href="{{ path('presta_cms_theme') }}">{{ 'dashboard.block.theme.title'|trans({}, 'PrestaCMSCoreBundle') }}</a></li>
