{% block top_bar_after_nav %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'dashboard.block.cms.title'|trans({}, 'PrestaCMSCoreBundle') }} <span class="caret"></span></a>
